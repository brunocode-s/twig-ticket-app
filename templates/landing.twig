{% extends "base.twig" %}
{% block title %}Landing - Ticket Easy{% endblock %}

{% block content %}
<div class="relative flex-1">

  <!-- Hero Section -->
  <section class="relative min-h-screen flex flex-col justify-center items-center overflow-hidden bg-gradient-to-br from-blue-600 via-blue-700 to-indigo-800 text-white px-6 py-32">

    <!-- Animated blurred circles -->
    <div class="absolute top-20 right-20 w-72 h-72 bg-blue-400 rounded-full opacity-20 blur-3xl animate-pulse"></div>
    <div class="absolute bottom-40 left-10 w-80 h-80 bg-purple-500 rounded-full opacity-15 blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute top-1/2 left-1/4 w-60 h-60 bg-indigo-400 rounded-full opacity-10 blur-2xl animate-pulse" style="animation-duration: 3s;"></div>

    <!-- Content -->
    <div class="max-w-4xl relative z-10 text-center">
      <h1 class="text-6xl md:text-7xl font-extrabold mb-6 leading-tight">
        Simplify Ticket<br>
        <span class="bg-gradient-to-r from-cyan-300 via-blue-300 to-purple-300 bg-clip-text text-transparent">
          Management
        </span>
      </h1>

      <p class="text-xl md:text-2xl mb-4 text-blue-100 max-w-2xl mx-auto leading-relaxed">
        Track, organize, and resolve tickets effortlessly all in one place.
      </p>
      <p class="text-base text-blue-200 mb-12 max-w-xl mx-auto">
        Streamline your workflow with intelligent automation and real-time collaboration.
      </p>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a href="?page=signup"
           class="group relative bg-white text-blue-600 text-lg px-8 py-4 rounded-xl shadow-2xl font-bold hover:shadow-white/20 hover:scale-105 transition-all duration-300 overflow-hidden">
          <span class="relative z-10">Get Started Free</span>
          <div class="absolute inset-0 bg-gradient-to-r from-blue-50 to-purple-50 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </a>

        <a href="?page=login"
           class="border-2 border-white text-white text-lg px-8 py-4 rounded-xl font-bold hover:bg-white hover:text-blue-600 hover:border-white transition-all duration-300 hover:scale-105">
          Login
        </a>
      </div>
    </div>

    <!-- Wave SVG -->
    <svg class="absolute bottom-0 left-0 w-full"
         xmlns="http://www.w3.org/2000/svg"
         viewBox="0 0 1440 320"
         preserveAspectRatio="none">
      <defs>
        <linearGradient id="waveGradient" x1="0%" y1="0%" x2="0%" y2="100%">
          <stop offset="0%" style="stop-color:#f9fafb; stop-opacity:0.3" />
          <stop offset="100%" style="stop-color:#f9fafb; stop-opacity:1" />
        </linearGradient>
      </defs>
      <path fill="url(#waveGradient)" d="M0,160L48,170.7C96,181,192,203,288,197.3C384,192,480,160,576,154.7C672,149,768,171,864,186.7C960,203,1056,213,1152,202.7C1248,192,1344,160,1392,144L1440,128V320H0Z"/>
    </svg>
  </section>

  <!-- Features Section -->
  {% set features = [
    {
      title: "Create Tickets",
      description: "Quickly create and organize tickets with an intuitive interface.",
      gradient: "from-blue-500 to-blue-600",
      iconPath: "M12 4v16m8-8H4"
    },
    {
      title: "Track Progress",
      description: "Monitor ticket status and team performance in real-time.",
      gradient: "from-green-500 to-emerald-600",
      iconPath: "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
    },
    {
      title: "Resolve Fast",
      description: "Streamline workflows and close tickets efficiently.",
      gradient: "from-purple-500 to-indigo-600",
      iconPath: "M13 10V3L4 14h7v7l9-11h-7z"
    }
  ] %}

  <section class="bg-white py-20 px-6">
    <div class="max-w-7xl mx-auto text-center mb-16">
      <h2 class="text-4xl font-extrabold text-gray-800 mb-4">Why Choose Ticket Easy?</h2>
      <p class="text-gray-600 text-lg max-w-2xl mx-auto">
        Powerful, intuitive, and built to help your team stay productive and focused.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {% for feature in features %}
        <div class="bg-gradient-to-br from-gray-50 to-blue-50 shadow-lg rounded-2xl p-8 text-center border border-gray-100 hover:shadow-xl hover:scale-105 transition-all duration-300">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r {{ feature.gradient }} rounded-2xl mb-6 text-white">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="{{ feature.iconPath }}"/>
            </svg>
          </div>
          <h3 class="font-bold text-2xl mb-3 text-gray-800">{{ feature.title }}</h3>
          <p class="text-gray-600 leading-relaxed">{{ feature.description }}</p>
        </div>
      {% endfor %}
    </div>
  </section>

</div>
{% endblock %}
